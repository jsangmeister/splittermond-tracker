{
  "name": "splittermond-tracker",
  "productName": "splittermond-tracker",
  "description": "Tracks your Splittermond character stats",
  "version": "1.0.0",
  "author": {
    "name": "Joshua Sangmeister",
    "email": "joshua.sangmeister@gmail.com"
  },
  "license": "GNU",
  "main": "dist/index.js",
  "scripts": {
    "build-electron": "tsc --project projects/electron/tsconfig.json",
    "watch-electron": "npm run build-electron -- --watch",
    "package": "npm run build-electron && npm run build && electron-forge package",
    "make": "npm run build-electron && npm run build && electron-forge make",
    "publish-app": "npm run build-electron && npm run build && electron-forge publish",
    "start": "concurrently \"npm run watch-electron\" \"ng serve splittermond-tracker\" \"wait-on http://localhost:4200 && electron-forge start\"",
    "serve": "concurrently \"npm run watch-electron\" \"ng serve splittermond-tracker\" \"wait-on http://localhost:4200\"",
    "build": "ng build",
    "watch": "ng build --watch --configuration development"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.8",
    "@angular/cdk": "^19.2.11",
    "@angular/common": "^19.2.8",
    "@angular/compiler": "^19.2.8",
    "@angular/core": "^19.2.8",
    "@angular/forms": "^19.2.8",
    "@angular/material": "^19.2.11",
    "@angular/platform-browser": "^19.2.8",
    "@angular/platform-browser-dynamic": "^19.2.8",
    "@angular/router": "^19.2.8",
    "electron-store": "^8.2.0",
    "rxjs": "~7.8.2",
    "stream": "^0.0.3",
    "timers": "^0.1.1",
    "tslib": "^2.3.0",
    "xml2js": "^0.6.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.9",
    "@angular/cli": "^19.2.9",
    "@angular/compiler-cli": "^19.2.8",
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@reforged/maker-appimage": "^5.0.0",
    "@types/xml2js": "^0.4.14",
    "concurrently": "^9.1.2",
    "electron": "^35.2.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "wait-on": "^8.0.3"
  }
}
