{
  "name": "splittermond-tracker",
  "productName": "splittermond-tracker",
  "description": "Tracks your Splittermond character stats",
  "version": "1.1.3",
  "author": {
    "name": "Joshua Sangmeister",
    "email": "joshua.sangmeister@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jsangmeister/splittermond-tracker.git"
  },
  "license": "GNU",
  "main": "dist/index.js",
  "scripts": {
    "build-electron": "tsc --project projects/electron/tsconfig.json",
    "watch-electron": "npm run build-electron -- --watch",
    "build-angular": "ng build",
    "watch-angular": "npm run build-angular -- --watch --configuration development",
    "build": "npm run build-electron && npm run build-angular",
    "postinstall": "electron-builder install-app-deps",
    "make": "npm run build && electron-builder build -p never",
    "start": "concurrently -k \"npm run watch-electron -- --preserveWatchOutput\" \"ng serve splittermond-tracker\" \"wait-on http://localhost:4200 && electron .\"",
    "prepare": "husky",
    "lint": "eslint --fix",
    "format": "prettier --write **/*.{js,mjs,ts,html,scss,json,yaml}"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.8",
    "@angular/cdk": "^19.2.11",
    "@angular/common": "^19.2.8",
    "@angular/compiler": "^19.2.8",
    "@angular/core": "^19.2.8",
    "@angular/forms": "^19.2.8",
    "@angular/material": "^19.2.11",
    "@angular/platform-browser": "^19.2.8",
    "@angular/platform-browser-dynamic": "^19.2.8",
    "@angular/router": "^19.2.8",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "events": "^3.3.0",
    "rxjs": "~7.8.2",
    "stream": "^0.0.3",
    "timers": "^0.1.1",
    "tslib": "^2.3.0",
    "xml2js": "^0.6.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^19.2.9",
    "@angular/cli": "^19.2.9",
    "@angular/compiler-cli": "^19.2.8",
    "@eslint/js": "^9.35.0",
    "@types/xml2js": "^0.4.14",
    "concurrently": "^9.1.2",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "wait-on": "^8.0.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,mjs,ts,html,scss,json,yaml}": [
      "npm run lint --",
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.github.jsangmeister.splittermondtracker",
    "asarUnpack": [
      "dist",
      "projects"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
