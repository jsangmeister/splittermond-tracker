{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "module": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "../../dist",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "strictNullChecks": true
  },
  "include": ["src/**/*", "../shared/**/*"]
}
